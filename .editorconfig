# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# C# files
[*.cs]
indent_size = 4

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# XML files
[*.{xml,csproj,sln,props,targets}]
indent_size = 2

# TypeScript and JavaScript files
[*.{ts,tsx,js,jsx}]
indent_size = 2

# HTML files
[*.html]
indent_size = 2

# CSS and SCSS files
[*.{css,scss}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Docker files
[Dockerfile*]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2
end_of_line = lf

# Package files
[package*.json]
indent_size = 2