{
  "name": "ppl-coach-monorepo",
  "version": "1.0.0",
  "description": "PPL Coach - Full Stack Fitness Application",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "dev:all": "./dev-monorepo.sh",
    "dev:web": "cd apps/web && npm run dev",
    "dev:frontend": "cd apps/web && npm run dev",
    "dev:mobile": "cd apps/mobile && pnpm dev",
    "dev:backend": "cd apps/backend && dotnet run --project src/PplCoach.Api/PplCoach.Api.csproj",
    "dev:db": "docker compose up -d db",
    "dev:with-api": "concurrently \"npm run dev:backend\" \"wait-on http://localhost:5000/swagger/v1/swagger.json && npm run api:generate\" \"npm run dev:web\"",
    "build": "turbo build",
    "build:web": "cd apps/web && npm run build",
    "build:mobile": "cd apps/mobile && pnpm build",
    "build:backend": "cd apps/backend && dotnet build",
    "build:api": "npm run api:generate && npm run api:build",
    "build:all": "npm run build:backend && npm run build:api && turbo build",
    "test": "turbo test",
    "test:web": "cd apps/web && npm run test",
    "test:frontend": "cd apps/web && npm run test",
    "test:mobile": "cd apps/mobile && pnpm test",
    "test:backend": "cd apps/backend && dotnet test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "lint": "turbo lint",
    "lint:web": "cd apps/web && npm run lint",
    "lint:mobile": "cd apps/mobile && pnpm lint",
    "lint:fix": "turbo lint:fix",
    "typecheck": "turbo typecheck",
    "api:generate": "cd shared/api-client && npm run generate && npm run build",
    "api:build": "cd shared/api-client && npm run build",
    "api:watch": "cd shared/api-client && npm run dev",
    "api:clean": "cd shared/api-client && npm run clean && rm -rf src/generated",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo clean && cd apps/backend && dotnet clean",
    "reset": "npm run clean && docker compose down -v && npm install",
    "setup": "npm install && npm run dev:db"
  },
  "workspaces": [
    "apps/web",
    "shared/*"
  ],
  "packageManager": "npm@10.9.0",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.47.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.0",
    "prettier": "^3.0.0",
    "turbo": "^2.5.6",
    "wait-on": "^8.0.0"
  },
  "keywords": [
    "fitness",
    "workout",
    "react",
    "dotnet",
    "typescript",
    "monorepo"
  ],
  "author": "PPL Coach Team",
  "license": "MIT"
}
