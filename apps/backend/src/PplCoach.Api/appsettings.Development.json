{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.EntityFrameworkCore.Database.Command": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ]
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=ppl_dev;Username=ppl;Password=ppl_password"
  },
  "JwtSettings": {
    "SecretKey": "SuperSecretKeyThatShouldBeStoredInEnvironmentVariablesAndBeAtLeast256BitsLong!",
    "Issuer": "PplCoachApi",
    "Audience": "PplCoachClient",
    "ExpirationMinutes": 60,
    "RequireHttpsMetadata": false
  },
  "CorsSettings": {
    "AllowedOrigins": [
      "http://localhost:5173",
      "http://localhost:5174",
      "http://localhost:3000"
    ],
    "AllowCredentials": true,
    "PreflightMaxAgeMinutes": 10,
    "AllowedMethods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"],
    "AllowedHeaders": ["*"]
  },
  "LocalFileOptions": {
    "UploadPath": "./uploads",
    "BaseUrl": "https://localhost:7001"
  },
  "AwsS3Options": {
    "BucketName": "your-s3-bucket-name",
    "Region": "us-east-1"
  }
}

